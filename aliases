#!/usr/bin/env bash
# Loader for segmented alias files.
_aliases_dir="$(cd "$(dirname "${BASH_SOURCE[0]:-$0}")" && pwd)/aliases.d"

if [ -d "$_aliases_dir" ]; then
  while IFS= read -r -d '' alias_file; do
    [ -r "$alias_file" ] && source "$alias_file"
  done < <(find "$_aliases_dir" -type f -name '*.sh' -print0 | sort -z)
fi

unset _aliases_dir alias_file
